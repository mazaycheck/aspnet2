@model Category
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="jumbotron">
        <form asp-action="Delete" method="post">
            <h3 class="text-info">Edit Category</h3>
            <div class="form-group row">
                
                <div class="col-lg-8">
                    <label asp-for="Name" class="lead"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Name" class="form-control" readonly/>
                
                    <div class="mt-3 d-flex">
                        <input class="mr-2 btn btn-danger btn-block" type="submit" value="Delete" asp-route-id="@Model.Id"/>
                        <a asp-action="Index" class="btn btn-warning btn-block m-0 text-white">Home</a>
                    </div>
                </div>

            </div>

        </form>
    </div>