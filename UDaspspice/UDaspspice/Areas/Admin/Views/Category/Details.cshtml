@model Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="jumbotron">
        <form asp-action="Edit" method="post">
            <h3 class="text-info">Edit Category</h3>
            <div class="form-group row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-lg-8">
                    <label asp-for="Name" class="lead"></label>
                </div>
                <div class="col-lg-8">
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <div class="mt-3 d-flex">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block m-0 text-white mr-2">Edit</a>
                        <a asp-action="Index" class="btn btn-warning btn-block m-0 text-white">Home</a>
                    </div>
                </div>

            </div>

        </form>
    </div>