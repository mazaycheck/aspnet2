@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="d-flex justify-content-between my-2">

        <h3 class="">Coupons</h3>
        <a asp-action="Create" class="btn btn-info">Create</a>

    </div>
    @if(Model.Count() > 0)
    {
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                    <th>@Html.DisplayNameFor(m=>m.Type)</th>
                    <th>@Html.DisplayNameFor(m=>m.Amount)</th>
                    <th>@Html.DisplayNameFor(m=>m.IsActive)</th>
                    <th>Manage</th>
                </tr>
            </thead>
            
            @foreach (var item in Model)
            {
        <tr>
            <td>@Html.DisplayFor(m => item.Name)</td>
            <td>@Html.DisplayFor(m => item.Type)</td>
            <td>@Html.DisplayFor(m => item.Amount)</td>
            <td>@Html.DisplayFor(m => item.IsActive)</td>
            <partial name="~/Views/Shared/_CategoryManageIcons.cshtml" model="item.Id" />
        </tr>
            }
        </table>
    }
    else
    {
        <p>No coupons . . .</p>
    }

</div>

